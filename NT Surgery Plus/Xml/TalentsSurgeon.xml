        <CharacterAbilityGiveResistance resistance="psychosis" multiplier="0.5" />
      </Abilities>
    </AbilityGroupEffect>
    <AddedRecipe itemidentifier="brainjar"/>
    <AddedRecipe itemidentifier="artificialbrain"/>
  </Talent>

  <Talent identifier="ntsp_autoimmune">
